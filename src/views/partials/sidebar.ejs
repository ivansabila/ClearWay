<div class="sidebar border-r border-slate-300 flex flex-col justify-between w-72 h-full pt-14 fixed top-0 left-0">
    <div class="flex flex-col p-4">
        <% if (user.role=="user" ) { %>
            <a class="itemSidebar flex items-center p-2 <%= active === "book" ? "bg-white" : "hover:bg-slate-200/50"
                %>" href="/">
                <svg class="<%= active === "book" ? "stroke-maroon" : "stroke-slate-400" %>"
                    xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
                    fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-inbox">
                    <polyline points="22 12 16 12 14 15 10 15 8 12 2 12" />
                    <path
                        d="M5.45 5.11 2 12v6a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-6l-3.45-6.89A2 2 0 0 0 16.76 4H7.24a2 2 0 0 0-1.79 1.11z" />
                </svg>
                <h1 class="text-base <%= active === "book" ? "font-medium text-brown" : "font-light text-slate-400" %>
                    text-left pl-3 titleSidebar font-base flex-auto">
                    Pengajuan</h1>
            </a>
            <a class="itemSidebar flex items-center p-2 <%= active === "profile" ? "bg-white" : "hover:bg-slate-200/50"
                %>" href="/profile/<%= user.id %>">
                    <svg class="<%= active === "profile" ? "stroke-maroon" : "stroke-slate-400" %>"
                        xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
                        fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                        stroke-linejoin="round"
                        class="lucide lucide-user-pen">
                        <path d="M11.5 15H7a4 4 0 0 0-4 4v2" />
                        <path
                            d="M21.378 16.626a1 1 0 0 0-3.004-3.004l-4.01 4.012a2 2 0 0 0-.506.854l-.837 2.87a.5.5 0 0 0 .62.62l2.87-.837a2 2 0 0 0 .854-.506z" />
                        <circle cx="10" cy="7" r="4" />
                    </svg>
                    <h1 class="text-base <%= active === "profile" ? "font-medium text-brown"
                        : "font-light text-slate-400" %> text-left pl-3 titleSidebar font-base flex-auto">
                        Profil</h1>
            </a>
            <a class="itemSidebar flex items-center p-2 <%= active === "history" ? "bg-white" : "hover:bg-slate-200/50"
                %>" href="/history">
                <svg class="<%= active === "history" ? "stroke-maroon" : "stroke-slate-400" %>"
                    xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
                    fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"
                    class="lucide lucide-history">
                    <path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8" />
                    <path d="M3 3v5h5" />
                    <path d="M12 7v5l4 2" />
                </svg>
                <h1 class="text-base <%= active === "history" ? "font-medium text-brown" : "font-light text-slate-400"
                    %> text-left pl-3 titleSidebar font-base flex-auto">
                    Riwayat</h1>
            </a>
            <% } else if (user.role=="subdistrict" ) { %>
                <a class="itemSidebar flex items-center p-2 <%= active === "book" ? "bg-white"
                    : "hover:bg-slate-200/50" %>" href="/">
                    <svg class="<%= active === "book" ? "stroke-maroon" : "stroke-slate-400" %>"
                        xmlns="http://www.w3.org/2000/svg"
                        width="18" height="18" viewBox="0 0 24 24"
                        fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                        stroke-linejoin="round"
                        class="lucide lucide-inbox">
                        <polyline points="22 12 16 12 14 15 10 15 8 12 2 12" />
                        <path
                            d="M5.45 5.11 2 12v6a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-6l-3.45-6.89A2 2 0 0 0 16.76 4H7.24a2 2 0 0 0-1.79 1.11z" />
                    </svg>
                    <h1 class="text-base <%= active === "book" ? "font-medium text-brown" : "font-light text-slate-400"
                        %> text-left
                        pl-3 titleSidebar font-base flex-auto">
                        Pengajuan</h1>
                </a>
                <a class="itemSidebar flex items-center p-2 <%= active === "history" ? "bg-white"
                    : "hover:bg-slate-200/50" %>"
                    href="/district/history">
                    <svg class="<%= active === "history" ? "stroke-maroon" : "stroke-slate-400" %>"
                        xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
                        fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                        stroke-linejoin="round"
                        class="lucide lucide-history">
                        <path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8" />
                        <path d="M3 3v5h5" />
                        <path d="M12 7v5l4 2" />
                    </svg>
                    <h1 class="text-base <%= active === "history" ? "font-medium text-brown"
                        : "font-light text-slate-400" %> text-left
                        pl-3 titleSidebar font-base flex-auto">
                        Riwayat</h1>
                </a>
                <a class="itemSidebar flex items-center p-2 <%= active === "users" ? "bg-white"
                    : "hover:bg-slate-200/50" %>"
                    href="/district/users">
                    <svg class="<%= active === "users" ? "stroke-maroon" : "stroke-slate-400" %>"
                        xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor"
                        stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-users">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
                        <circle cx="9" cy="7" r="4" />
                        <path d="M22 21v-2a4 4 0 0 0-3-3.87" />
                        <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                    </svg>
                    <h1 class="text-base <%= active === "users" ? "font-medium text-brown"
                        : "font-light text-slate-400" %> text-left
                        pl-3 titleSidebar font-base flex-auto">
                        Pengguna</h1>
                </a>
                <% } else if (user.role=="admin" ) { %>
                    <a class="itemSidebar flex items-center p-2 <%= active === "book" ? "bg-white"
                        : "hover:bg-slate-200/50" %>" href="/">
                        <svg class="<%= active === "book" ? "stroke-maroon" : "stroke-slate-400" %>"
                            xmlns="http://www.w3.org/2000/svg"
                            width="18" height="18" viewBox="0 0 24 24"
                            fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                            stroke-linejoin="round"
                            class="lucide lucide-inbox">
                            <polyline points="22 12 16 12 14 15 10 15 8 12 2 12" />
                            <path
                                d="M5.45 5.11 2 12v6a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-6l-3.45-6.89A2 2 0 0 0 16.76 4H7.24a2 2 0 0 0-1.79 1.11z" />
                        </svg>
                        <h1 class="text-base <%= active === "book" ? "font-medium text-brown"
                            : "font-light text-slate-400" %> text-left
                            pl-3 titleSidebar font-base flex-auto">
                            Pengajuan</h1>
                    </a>
                    <a class="itemSidebar flex items-center p-2 <%= active === "history" ? "bg-white"
                        : "hover:bg-slate-200/50" %>"
                        href="/admin/history">
                        <svg class="<%= active === "history" ? "stroke-maroon" : "stroke-slate-400" %>"
                            xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24"
                            fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"
                            stroke-linejoin="round"
                            class="lucide lucide-history">
                            <path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8" />
                            <path d="M3 3v5h5" />
                            <path d="M12 7v5l4 2" />
                        </svg>
                        <h1 class="text-base <%= active === "history" ? "font-medium text-brown"
                            : "font-light text-slate-400" %> text-left
                            pl-3 titleSidebar font-base flex-auto">
                            Riwayat</h1>
                    </a>
                    <a class="itemSidebar flex items-center p-2 <%= active === "users" ? "bg-white"
                        : "hover:bg-slate-200/50" %>"
                        href="/admin/users">
                        <svg class="<%= active === "users" ? "stroke-maroon" : "stroke-slate-400" %>"
                            xmlns="http://www.w3.org/2000/svg"
                            width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="lucide
                            lucide-users">
                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
                            <circle cx="9" cy="7" r="4" />
                            <path d="M22 21v-2a4 4 0 0 0-3-3.87" />
                            <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                        </svg>
                        <h1 class="text-base <%= active === "users" ? "font-medium text-brown"
                            : "font-light text-slate-400" %> text-left
                            pl-3 titleSidebar font-base flex-auto">
                            Pengguna</h1>
                    </a>
                    <% } %>
    </div>
    <form action="/login/logout" method="post">
        <div class="flex flex-col p-4">
            <button class=" group itemSidebar flex items-center p-2 hover:bg-slate-200/50" type="submit">
                <svg class="stroke-slate-400 group-hover:stroke-maroon" xmlns="http://www.w3.org/2000/svg" width="18"
                    height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"
                    stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-log-out">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
                    <polyline points="16 17 21 12 16 7" />
                    <line x1="21" x2="9" y1="12" y2="12" />
                </svg>
                <h1
                    class="text-base font-light text-left pl-3 titleSidebar font-base text-slate-400 flex-auto group-hover:text-brown group-hover:font-medium">
                    Keluar</h1>
            </button>
        </div>
    </form>
</div>